<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tile_1_1"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tile_1_2"
        app:layout_constraintEnd_toStartOf="@+id/tile_2_1" />

    <TextView
        android:id="@+id/tile_2_1"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tile_2_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tile_3_1"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tile_3_2"
        app:layout_constraintStart_toEndOf="@+id/tile_2_1" />

    <TextView
        android:id="@+id/tile_1_2"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tile_2_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_2_2"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_3_2"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tile_2_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_1_3"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/tile_2_3"
        app:layout_constraintTop_toBottomOf="@+id/tile_1_2" />

    <TextView
        android:id="@+id/tile_2_3"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tile_2_2" />

    <TextView
        android:id="@+id/tile_3_3"
        style="@style/WhiteBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/tile_2_3"
        app:layout_constraintTop_toBottomOf="@+id/tile_3_2" />

</androidx.constraintlayout.widget.ConstraintLayout>